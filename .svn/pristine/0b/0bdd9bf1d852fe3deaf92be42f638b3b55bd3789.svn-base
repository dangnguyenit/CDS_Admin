#new_user_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h3#modalLabel
    %form#new_user_pop_up
      .modal-body
        .widget.widget-heading-simple.widget-body-white
          .widget-body
            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "full_name"}
                    = t('users.new_pop_up.full_name')
                .col-sm-10
                  %input#full_name.form-control{name: "full_name", type: "text", autofocus: "", placeholder: "#{t('users.new_pop_up.full_name')}", tabindex: "1"}

            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "abbreviation"}
                    Abbreviation
                .col-sm-10
                  %input#abbreviation.form-control{name: "abbreviation", type: "text", placeholder: "Abbreviation", tabindex: "2"}

            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "email_address"}
                    Email Address
                .col-sm-10
                  %input#email_address.form-control{name: "email_address", type: "text", placeholder: "Email Address", tabindex: "3"}

            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "employee_id"}
                    Employee ID
                .col-sm-10
                  %input#employee_id.form-control{name: "employee_id", type: "text", placeholder: "Employee ID", tabindex: "4"}

            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "role"}
                    Role
                .col-sm-10
                  %select#role.form-control
                    = groups.each do |group|
                      %option{value: "#{group.id}"}
                        = group.name

            .form-group
              .row
                .col-sm-2
                  %label.control-label{:for => "staus"}
                    Status
                .col-sm-10
                  %select#status.form-control
                    %option{value: "true"}
                      Active
                    %option{value: "false"}
                      In-active
              
        .modal-footer.center
          .control-group.center
            %button#create-user.btn.btn-icon.btn-primary.glyphicons.circle_ok{type: "submit", tabindex: "5", value: "create"}
              = t('button.create')
              %i
            %button.btn.btn-icon.btn-default.glyphicons.circle_remove{type: "button" , "data-dismiss" => "modal", tabindex: "6"}
              = t('button.cancel')
              %i
