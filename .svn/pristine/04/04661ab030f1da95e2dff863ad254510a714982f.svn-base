  /**
  * Delete user who have the id which passed into
  *
  * @author DangNH <dangnh@elarion.com>
  * @param {token} [token] - Authenticity token to validate
  * @param {integer} [id] - User's id
  * @param {string} [message] - String to compare which message is shown before delete
  * @returns None
  * @deprecated since version 2.0
  * @todo improve this function.
  */
  delete_department : function(token, id, message) {
    if(message) {
      $.ajax({
        type: "DELETE",
        url: g_destroyDepartmentPath,
        data: {
          data: id,
          authenticity_token: token},
        success: function(data) {
          if(department_notify) {
            department_notify.close()
          }
          department_notify = notyfy({
            text: I18n.t('departments.j_delete_selected'),
            type: "success"
          })
          tb_all.fnDraw();
        },
        error: function(data) {
          if(department_notify) {
            department_notify.close()
          }
          department_notify = notyfy({
            text: "<b>" + I18n.t('departments.j_delete_selected_error') + "</b>",
            type: "error" 
          })
        }
      });
    }
    else {
      bootbox.confirm(I18n.t('departments.j_delete_confirm'), function(result) {
        if(result) {
          $.ajax({
            type: "DELETE",
            url: g_destroyDepartmentPath,
            data: {
              data: id,
              authenticity_token: token},
            success: function(data) {
              if(department_notify) {
                department_notify.close()
              }
              department_notify = notyfy({
                text: "<b>" + I18n.t('departments.j_delete_success') + "</b>",
                type: "success"
              })
              tb_all.fnDraw();
            },
            error: function(data) {
              if(department_notify) {
                department_notify.close()
              }
              department_notify = notyfy({
                text: "<b>" + I18n.t('departments.j_delete_error') + "</b>",
                type: "error"
              })
            }
          });
        }
      });
    }
  },

